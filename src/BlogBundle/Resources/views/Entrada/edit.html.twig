{% extends "BlogBundle::layout.html.twig" %}

{% block content %}
    <div class="col-lg-6">
        <br/>
        <h2>Editar entrada: {{ entrada.titulo }}</h2>
        
        {% if app.session.flashbag().get('status_error') is defined  %}
            {% for message in app.session.flashbag().get("status_error") %}
                {% if message != "" %}
                    <div class="alert alert-danger">{{ message }}</div>
                {% endif %}
            {% endfor %}
        {% endif %}

        {{ form_start(form, {"enctype":"multipart/form-data"}) }}
            <label>Imagen:</label>
            <img width="100" src="{{ asset("uploads/"~entrada.imagen) }}"/>
            {{ form_widget(form.imagen) }}
            <label>Etiquetas: </label>{{ form_widget(form.etiquetas, {'value':etiquetas}) }}
        {{ form_end(form) }}
    </div>

    <div class="clearfix"></div>

{% endblock %}